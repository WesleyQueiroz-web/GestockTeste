<Window x:Class="GestockTeste.Apresentação.frmPEE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestockTeste.Apresentação"
        mc:Ignorable="d"
        Title="Pesquisar, Editar e Excluir" Height="450" Width="548">
    <Grid>
        <Label x:Name="lblId" Content="ID" HorizontalAlignment="Left" Margin="41,37,0,0" VerticalAlignment="Top" Width="74"/>
        <TextBox x:Name="txbId" HorizontalAlignment="Left" Margin="78,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnPesquisarPorId" Content="Pesquisar por ID" HorizontalAlignment="Left" Margin="315,40,0,0" VerticalAlignment="Top" Click="btnPesquisarPorId_Click"/>
        <Label x:Name="lblNome" Content="Nome" HorizontalAlignment="Left" Margin="41,83,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbNome" HorizontalAlignment="Left" Margin="89,91,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblCategoria" Content="Categoria" HorizontalAlignment="Left" Margin="46,136,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbCategoria" HorizontalAlignment="Left" Margin="107,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblQuantidade" Content="Quantidade" HorizontalAlignment="Left" Margin="48,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbQuantidade" HorizontalAlignment="Left" Margin="125,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnEditar" Content="Editar Produto" HorizontalAlignment="Left" Margin="58,273,0,0" VerticalAlignment="Top" Width="125" Height="39" Click="btnEditar_Click"/>
        <Button x:Name="btnExcluir" Content="Excluir" HorizontalAlignment="Left" Margin="274,273,0,0" VerticalAlignment="Top" Height="39" Width="68" Click="btnExcluir_Click"/>
        <Button x:Name="btnPesquisarPorNome" Content="Pesquisar por Nome" HorizontalAlignment="Left" Margin="315,91,0,0" VerticalAlignment="Top" Click="btnPesquisarPorNome_Click"/>
        <Button x:Name="btnVoltar" Content="Voltar" HorizontalAlignment="Left" Margin="428,265,0,0" VerticalAlignment="Top" Height="47" Width="72"/>
        <Label x:Name="lblLote" Content="Lote" HorizontalAlignment="Left" Margin="58,186,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbLote" HorizontalAlignment="Left" Margin="107,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
